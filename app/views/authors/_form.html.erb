<%= bootstrap_form_for(@author, html: { class: 'form-horizontal'}) do |f| %>
	<div class='form-group'>
		<%= f.label 'First Name', class: 'control-label col-md-3' %>
		<div class="col-md-9">
			<%= f.text_field :first_name, class: 'form-control', hide_label: true %>
		</div>
	</div>
	<div class="form-group">
		<%= f.label 'Last Name', class: 'control-label col-md-3' %>
		<div class="col-md-9">
			<%= f.text_field :last_name, class: 'form-control', hide_label: true %>
		</div>
	</div>
	<div class="form-group actions control-group">
		<div class="col-md-offset-3">
			<%= f.submit class: 'btn btn-primary' %>
		</div>
	</div> 
<% end %>